<script>
    function SureForDeleteProduct(Id) {
        var x = $("#Name").val();
        var name = "( " + x + " )";
        let text = "آیا مطمئن هستید که می خواهید محصول  " + name + " را حذف کنید ؟ ";
        if (confirm(text) == true) {
            $.ajax({
                url: 'DeleteProduct',
                type: 'POST',
                data: { productId: Id },
                success: function (res) {
                    if (res.message != null) {
                        alert(res.message);
                        window.location.replace(res.action);
                    }                    
                    else {
                        alert(res);
                    }
                },
                error: function (e) {
                    alert("Error is : " + e);
                }
            })
        }
    }
</script>





<script>

    function ResetForm() {
        $("#submit").attr('disabled', false);
        $("#file_error").html("");
        $("#file_error1").html("");
        $("#form").reset();
    }

    $(document).ready(function () {
        $("#imageFile").change(function () {
            $("#file_error").html("");
            $("#file_error1").html("");
            $(".file_upload1").css("border-color", "#F0F0F0");
            $("#submit").attr('disabled', false);
            var file_size = $('#imageFile')[0].files[0].size;
            if (file_size > 500000) {
                $("#file_error").html("<p style='color:#FF0000'>حجم عکس نمیتواند بیش از 500 Kb باشد!</p>");
                $(".file_upload1").css("border-color", "#FF0000");
                $("#submit").attr('disabled', true);
                return false;
            }
            var filename = $('#imageFile')[0].files[0].name;
            var extension = filename.substr(filename.lastIndexOf("."));
            var allowedExtensionsRegx = /(\.jpg|\.jpeg|\.png)$/i;
            var isAllowed = allowedExtensionsRegx.test(extension);
            if (isAllowed == false) {
                $("#file_error1").html("<p style='color:#FF0000'>فرمت عکس اشتباه است!</p>");
                $(".file_upload1").css("border-color", "#FF0000");
                $("#submit").attr('disabled', true);
            }
            return true;
        });
    });

    $(function () {
        $('#submit').click(function () {
            if ($("#form").valid()) {
                return false;
            }
            else {
                return false;
            }
        });
    })

    function SubmitForm() {
        $("#form").submit(function (e) {
            e.preventDefault();
            var formData = new FormData(this);
            var fileUpload = $("#imageFile").get(0);
            var files = fileUpload.files;
            formData.set('ImageFile', files[0]);
            $.ajax({
                url: 'EditProduct',
                type: 'POST',
                data: formData,
                cache: false,
                contentType: false,
                processData: false,
                success: function (data) {
                    //alert(data);
                    if (data) {
                        alert("تغییرات با موفقیت انجام شد");
                        $("#asdf").html(data);
                    }
                    else {
                        alert(data);
                    }
                },
                error: function (e) {
                    alert("error : " + e.statusText);
                }
            });
        });
    }
</script>





