@model BaziMarket2.Models.ViewModel.PropertyAddViewModel


<div class="card-header">
    <h3 style="font-size: 22px;" class="card-title">ویژگی ها</h3>
    <div class="card-tools">
        <button type="button" class="btn btn-tool" data-widget="collapse" style="width: 100px;">
            <span style="font-size: 22px; color: #007bff;" class="material-symbols-outlined">add</span>
        </button>
    </div>
    <!-- /.card-tools -->
</div>
<!-- /.card-header -->
<div class="card-body">
    <div class="row">

        <div class="card col-6">
            <div class="card-header">
                <h3 style="font-size: 16px;">ثبت ویژگی جدید</h3>
            </div>
            <div class="card-body">
                <form id="formProperty">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <input id="ProductId" name="ProductId" type="number" hidden value="@ViewBag.ProductId" />
                    <div class="form-group col-12">
                        <label for="">متن ویژگی</label>
                        @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label for="">شماره ویژگی</label>
                            <select class="form-control" id="Index" name="Index">
                                @foreach (var item in ViewData["Indexes"] as List<int>)
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                        </div>
                        <div class="form-group col-6">
                            <label style="color: white;" for="">/</label>
                            <input id="submitProperty" onclick="SubmitFormProperty()" type="submit" class="form-control btn btn-success" value="ثبت" />
                        </div>
                    </div>
                </form>
            </div>
        </div>




        <div class="card col-6">
            <div class="card-header" style="background-color: honeydew;">
                <h3 style="font-size: 17px;">ویژگی ها ی محصول</h3>
            </div>
            <div class="card-body" style="padding: 5px;">
                <table class="table table-striped" style="font-size: 14px;">
                    <tr>
                        <th>ویژگی</th>
                        <th>شماره</th>
                        <th>حذف</th>
                    </tr>
                    @if (ViewData["Properties"] != null)
                    {
                        foreach (var item in ViewData["Properties"] as List<BaziMarket2.Models.Property>)
                        {
                            <tr>
                                <td>@item.Text</td>
                                <td class="col-2">@item.Index</td>
                                <td class="col-2"><button onclick="DeleteProperty(Id = @item.Id)" class="btn" style="background-color: inherit; width: 30px; height: 30px;"><span style="color: red; font-size: 25px;" class="material-symbols-outlined">delete_forever</span></button></td>
                            </tr>
                        }
                    }
                </table>
            </div>
        </div>
    </div>


</div>
<!-- /.card-body -->


<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
