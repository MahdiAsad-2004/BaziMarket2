    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0 text-dark">ثبت کد تخفیف</h1>
                        <i class="fa-file-plus" style="color: #ff2929;"></i>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-left">
                            <li><a style="text-decoration:none;" href="https://localhost:44322/Admin/Admin/Panel">پنل مدیر</a></li>
                            <li style="padding-left:8px; padding-right:8px;">/</li>
                            <li class="">ثبت کد تخفیف</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->
        <!-- Main content -->
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-7">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">فرم</h3>
                            </div>
                            <!-- /.card-header -->

                            <div class="card-body p-0">
                                <form id="form" class="form" style="padding: 20px;">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="row col-12" style="margin-bottom: 10px;">
                                        <div class="form-group col-6">
                                            <label for="">کد تخفیف</label>

                                            <input class="form-control text-box single-line" data-val="true" data-val-length="کد تخفیف باید حداقل 3 و حداکثر 30 کاراکتر باشد" data-val-length-max="30" data-val-length-min="3" data-val-required="کد تخفیف ضروری است" id="Code" name="Code" type="text" value="" placeholder="کد تخفیف را وارد کنید">
                                            <span class="field-validation-valid text-danger" data-valmsg-for="Code" data-valmsg-replace="true"></span>
                                        </div>
                                        <div class="form-group col-6">
                                            <label for="">درصد تخفیف (%)</label>
                                            <input class="form-control text-box single-line" data-val="true" data-val-number="The field درصد تخفیف must be a number." data-val-range="درصد تخفیف باید بین 1 تا 99 باشد" data-val-range-max="99" data-val-range-min="1" data-val-required="درصد تخفیف ضروری است" id="Percent" name="Percent" type="number" step="0.1" value="" min="1">
                                            <span class="field-validation-valid text-danger" data-valmsg-for="Percent" data-valmsg-replace="true"></span>
                                        </div>
                                    </div>

                                    <div class="row col-12" style="margin-bottom: 10px;">
                                        <div class="form-group col-6">
                                            <label for="">حداکثر تخفیف (تومان)</label>
                                            <input class="form-control text-box single-line" data-val="true" data-val-number="The field حداکثر تخفیف must be a number." data-val-range="حداکثر تخفیف باید بین 0 تا 50,000,000 تومان باشد" data-val-range-max="50000000" data-val-range-min="0" data-val-required="حداکثر تخفیف ضروری است" id="MaxPrice" name="MaxPrice" type="number" value="0">
                                            <span class="field-validation-valid text-danger" data-valmsg-for="MaxPrice" data-valmsg-replace="true"></span>
                                        </div>
                                    </div>

                                    <div class="col-12 row" style="margin-bottom: 10px;">
                                        <div class="form-group col-6">
                                            <label style="color: white;" for="">/</label>
                                            <input onclick="ResetForm()" class="btn btn-block btn-warning" type="reset" value="باز نویسی" />
                                        </div>
                                        <div class="form-group col-6">
                                            <label style="color: white;" for="">/</label>
                                            <input onclick="SubmitForm()" id="submit" class="btn btn-block btn-success" type="submit" value="ثبت" />
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>



                    <div class="col-5">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">آخرین کد تخفیف ها</h3>
                            </div>

                            <div class="card-body p-0">
                                <table class="table table-striped" style="font-size: 14px;">
                                    <tr style="background-color: honeydew;">
                                        <th>کد تخفیف</th>
                                        <th>درصد (%)</th>
                                        <th>حداکثر تخفیف</th>
                                        <th>حذف</th>
                                    </tr>
                                    @if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Code</td>
                                                <td>@item.Percent %</td>
                                                <td>تومان @item.MaxPrice.DevideMoneyNumber()</td>
                                                <td class="col-2"><button onclick="DeleteDiscount(Id = @item.Id)" type="button" class="btn" style="background-color: inherit; width: 30px; height: 30px;"><span style="color: red; font-size: 30px;" class="material-symbols-outlined">delete_forever</span></button></td>
                                            </tr>
                                        }
                                    }
                                </table>
                            </div>




                        </div>
                    </div>




                    <!-- /.row -->
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
    </div>
    <!-- ./wrapper -->







    <script>

        function resetForm() {
            $("#form").reset();
        }


        $(function () {
            $('#submit').click(function () {
                if ($("#form").valid()) {
                    return false;
                }
                else {
                    return false;
                }
            });
        })

        function SubmitForm() {
            $("#form").submit(function (e) {
                e.preventDefault();
                var formData = new FormData(this);

                $.ajax({
                    url: 'AddDiscount',
                    type: 'POST',
                    data: formData,
                    cache: false,
                    contentType: false,
                    processData: false,
                    success: function (data) {
                        if (data.message != null) {
                            alert(data.message);
                            $("#asdf").load(data.action);
                        }
                        else if (data != "false") {
                            alert(data);
                        }
                    },
                    error: function (e) {
                        alert("error : " + e.statusText);
                    }
                });
            });
        }

        function DeleteDiscount(Id) {
            $.ajax({
                url: 'DeleteDiscount',
                type: 'POST',
                data: { discountId: Id },
                success: function (res) {
                    if (res != "false") {
                        $("#asdf").html(res);
                    }
                },
                error: function (e) {
                    alert("Error is : " + e);
                }
            })
        }

    </script>



    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
















