                                    <div class="card-tools">
                                        <a href="#" class="btn btn-tool btn-sm">
                                            <i class="fa fa-download"></i>
                                        </a>
                                        <a href="#" class="btn btn-tool btn-sm">
                                            <i class="fa fa-bars"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="card-body p-0">
                                    <table class="table table-striped table-valign-middle">
                                        <thead>
                                            <tr>
                                                <th>محصولات</th>
                                                <th>قیمت</th>
                                                <th>فروش</th>
                                                <th>تخفیف</th>
                                                <th>موجودی</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (ViewData["LastProducts"] != null)
                                            {
                                                foreach (var item in ViewData["LastProducts"] as List<BaziMarket2.Models.Product>)
                                                {
                                                    <tr>
                                                        <td>
                                                            <img src="~/Images/product-image/@item.Image" alt="Product 1" style="width:30px; height:30px; border-radius:8px;">
                                                            <a style="color:black;" href="https://localhost:44322//Product/Product/@item.EncodeName()">@item.Name</a>
                                                        </td>
                                                        <td>@item.Price.DevideMoneyNumber() تومان</td>
                                                        <td>
                                                            @item.Sold فروش
                                                        </td>
                                                        <td>
                                                            @if (item.Discount == null)
                                                            {
                                                                <span>ندارد</span>

                                                            }
                                                            else
                                                            {
                                                                <span>@item.Discount %</span>
                                                            }
                                                        </td>
                                                        <td> @item.InStockCount</td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>















